{
  "name": "DesignSnap Edu",
  "description": "AI-powered web enhancement suggestion using Groq",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "code.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
