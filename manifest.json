{
  "name": "DesignSnap Edu",
  "description": "AI-powered web enhancement suggestion using Groq",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "manifest_version": 3,
  "action": {
    "default_icon": "code.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
